<!DOCTYPE html>
<html lang="en">
<head>
	<title>moviebomber.org | <%-game[0][0].username%> <%-game[0][0].mode%> <%-game[0][0].sid.substring(0,5)%></title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="robots" content="noindex,nofollow">
	<% include ./styles %>
	<% include ./fonts %>
</head>
<body>
	<% include ./nav %>

    <style>
		.grid div {font-size: 18px}
		.guess {font-size: 12px}
        .correct {color: #01d277}
        .incorrect {color: #ee6e73}
    </style>

	<main>
		<div class="top-wrapper row">
			<br>
			<div class="content-wrapper col s12 m8 offset-m2 xl6 offset-xl3">
				<div class="row">
					<div class="col s12">
						<h5 id="data"><a href="/@/<%-game[0][0].username%>"><%-game[0][0].username%></a> | <%-game[0][0].mode%> | <%-game[0][0].sid.substring(0,5)%> | <%-new Date(game[0][0].created).toISOString().split('T')[0]%></h5>
					</div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div id="grid" class="grid"></div>
                    </div>
                </div>
            </div>
		</div>
	</main>

	<% include ./footer %>

	<script>
        const socketString = <%-JSON.stringify(socket)%>;
        const gameString = <%-JSON.stringify(game[1][0].package)%>;
	</script>
	<script src="/js/jquery.slim.min.js"></script>
	<script src="<%-socket%>/socket.io/socket.io.js"></script>
	<script src="/js/materialize.min.js"></script>
    <script src="/js/games.js"></script>
	<script src="/js/init.js"></script>
	<script src="/js/sweetalert.min.js"></script>
</body>
</html>