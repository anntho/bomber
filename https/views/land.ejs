<!DOCTYPE html>
<html lang="en">
<head>
	<title>moviebomber.org | home</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="keywords" content="Movies, Trivia, Free Trivia, Free Movie Trivia">
	<meta name="description" content="Join the fastest growing online movie trivia and gaming community">
	<% include ./robots %>
	<% include ./styles %>
	<% include ./fonts %>
</head>
<body>
	<% include ./nav %>

	<main>
		<div class="top-wrapper row mt-3">
			<div class="content-wrapper col s12 m8 offset-m2 xl6 offset-xl3">
				<br>
				<div id="searchModal" class="modal">
					<div class="modal-content">
						<h5 class="mb-2">Searching for a game...</h5>
						<div class="progress">
      						<div class="indeterminate"></div>
  						</div>
					</div>
					<div class="modal-footer">
						<a id="cancel" class="modal-close waves-effect waves-green btn-flat mb-orange-text">Cancel</a>
					</div>
				</div>

				<div class="row mb-3">
					<div class="col s4">
						<a id="beta" class="col s12 btn-large dark-light waves-effect">blitz</a>
					</div>
					<div class="col s4">
						<a href="/bomber" class="col s12 btn-large dark-light waves-effect">bomber</a>
					</div>
					<div class="col s4">
						<a href="/classic" class="col s12 btn-large dark-light waves-effect">classic</a>
					</div>
				</div>

				<br>

				<div class="row">
					<div class="col s12">
						<h5 class="valign-wrapper">
							<i class="material-icons left cyan-text">equalizer</i>
							Site Metrics
						</h5>
						<canvas id="myChart" class="mb-3"></canvas>
					</div>
				</div>

				<h5 class="valign-wrapper">
					<i class="material-icons left cyan-text">people</i>
					New Users
				</h5>
				<% if (metrics && metrics.newUsers) { %>
					<% metrics.newUsers.forEach(u => { %>
						<p class="valign-wrapper newUser">
							<i class="material-icons left blue-grey-text">exposure_plus_1</i>
							<a href="/@/<%-u%>">[<%-u%>]</a>
						</p>
					<% }); %>
				<% } %>
			</div>
		</div>
	</main>

	<% include ./footer %>

	<script>
		const socketString = <%-JSON.stringify(socket)%>;
		const metrics = <%-JSON.stringify(metrics)%>;
	</script>
	<script src="/js/jquery.slim.min.js"></script>
	<script src="/js/Chart.bundle.min.js"></script>
	<script src="<%-socket%>/socket.io/socket.io.js"></script>
	<script src="/js/materialize.min.js"></script>
	<script src="/js/init.js"></script>
	<script src="/js/nav.js"></script>
	<script src="/js/land.js"></script>
	<script src="/js/sweetalert.min.js"></script>
</body>
</html>