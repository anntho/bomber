<div id="visor" class="row scontainer visor-wrapper mb-0">
    <div class="visor-row top mb-2">
        <div class="visor-icon-box">
            <div class="visor-icon hide-on-small-only">
                <img id="userIcon" src="/images/user_2.png" alt="user_icon">
            </div>
            <div class="visor-text">
                <div class="visor-username" id="visorUser"></div>
                <div id="visorUserStats" class="visor-rank">
                    <span id="userRank"></span>
                    <span id="userElo"></span>
                    <span id="userEloPoints"></span>
                </div>
            </div>
        </div>
        <div class="visor-clock">
            <!-- placeholder -->
        </div>
        <div class="visor-icon-box">
            <div class="visor-icon hide-on-small-only">
                <img id="opponentIcon" src="/images/user_3.png" alt="user_icon">
            </div>
            <div class="visor-text">
                <div class="visor-username" id="visorOpponent"></div>
                <div id="visorOpponentStats" class="visor-rank">
                    <span id="opponentRank"></span>
                    <span id="opponentElo"></span>
                    <span id="opponentEloPoints"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="visor-row middle">    
        <div class="progress user col s6">
            <div id="userProgress" class="determinate"></div>
        </div>
        <div class="progress opponent col s6">
            <div id="opponentProgress" class="determinate"></div>
        </div>
    </div>
</div>