<!DOCTYPE html>
<html lang="en">
<head>
	<title>moviebomber.org | <%-thisUser.username%></title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="robots" content="noindex,nofollow">
	<% include ./styles %>
	<% include ./fonts %>
</head>
<body>
	<% include ./nav %>
	<main>
		<div class="top-wrapper row">
			<div class="content-wrapper">
				<div class="col s12">
					<div class="row profile-header mb-0">
						<div class="col s6 mt-1">
							<h5 id="username" class="cyan-text bold">
								{ <span class="grey-text"><%-thisUser.username%></span> }
							</h5>
						</div>
						<div class="col s12 mt-2 profile-action-buttons">
							<a id="follow" class="point mr-1">follow</a>
							<a id="message" class="point mr-1">message</a>
							<a id="challenge" class="point mr-1">challenge</a>
						</div>
					</div>
					<div class="row valign-wrapper line mb-0">
						<div class="col s4 m2">
							<span>Joined</span>
						</div>
						<div class="col s8 m4">
							<span id="dateJoined" class="data"><%-new Date(thisUser.created).toISOString().split('T')[0];%></span>
						</div>
						<div class="col s8 m6"></div>
					</div>

					<div class="row valign-wrapper line mb-0">
						<div class="col s4 m2">
							<span>Rating</span>
						</div>
						<div class="col s8 m4">
							<span id="rank" class="data"><%-thisUser.elo%></span>
						</div>
						<div class="col s8 m6"></div>
					</div>

					<div class="row valign-wrapper line mb-0">
						<div class="col s4 m2">
							<span>Rank</span>
						</div>
						<div class="col s8 m4">
							<span id="rank" class="data"><%-rank.rank.toLowerCase()%></span>
						</div>
						<div class="col s8 m6">
							<span class="progress-data">
								<%-rank.nextRank.toUpperCase()%> <%-gamesPlayed%>/<%-rank.nextFloor%>
							</span>
							
							<div class="progress">
								<div class="determinate" style="width: <%-rank.pct%>%"></div>
							</div>
						</div>
					</div>

					<div class="row valign-wrapper profile-header mb-0">
						<div class="col s12">
							<h5 id="username" class="amber-text bold">
								{ <span class="grey-text">games</span> }
							</h5>
						</div>
					</div>
					<div class="row valign-wrapper line">
						<div class="col s12">
							<table>
								<thead>
									<tr>
										<th>Played</th>
										<th>Opponent</th>
										<th>Outcome</th>
									</tr>
								</thead>
								<tbody id="games">
									<% games.forEach(game => { %>
										<tr id="<%-game.room%>">
											<td><%-game.date%></td>
											<td><%-game.gameOpponent.username%></td>
											<td class="<%-game.userColor%>">
												<%-(game.winner) ? `W [+${game.gameUser.new.points}]` : `L [${game.gameUser.new.points}]`%>
											</td>
										</tr>
									<% }); %>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>

	<% include ./footer %>

	<script>
		const socketString = <%-JSON.stringify(socket)%>;
	</script>
	<script src="/js/jquery.min.js"></script>
	<script src="/js/Chart.bundle.min.js"></script>
	<script src="<%-socket%>/socket.io/socket.io.js"></script>
	<script src="/js/nav.js"></script>
	<script src="/js/profile.js"></script>
	<script src="/js/materialize.min.js"></script>
	<script src="/js/init.js"></script>
	<script src="/js/sweetalert.min.js"></script>
</body>
</html>